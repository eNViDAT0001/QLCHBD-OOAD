<Page x:Class="QLCHBD_OOAD.view.staff.StaffManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QLCHBD_OOAD.view.staff"
      mc:Ignorable="d" 
      Background="Transparent"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StaffManagePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Border Background="white" BorderThickness="1" CornerRadius="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/QLCHBD-OOAD;component/Assets/staff-ava.png"
                               Margin="0 10 5 10"
                               HorizontalAlignment="Right"/>
                        <Grid Grid.Column="1" Margin="0 10 0 10">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Staff's name:"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Password:"
                                       Grid.Row="1"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="New password:"
                                       FontSize="14"
                                       Grid.Row="2"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBox Text="Staff's name:"
                                       FontSize="14"
                                     
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                       VerticalAlignment="Center"/>
                            <TextBox Text="Password:"
                                       Grid.Row="1"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBox Text="New password:"
                                       FontSize="14"
                                       Grid.Row="2"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
